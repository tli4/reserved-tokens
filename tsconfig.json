{
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "outDir": "lib/",
    "removeComments": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "inlineSourceMap": false,
    "stripInternal": true,
    "target": "ES2017",
    "watch": false,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.json"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "build/**",
    "node_modules/**"
  ]
}